@model Business.Models.KindList
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEditKind", "AddItem", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.KindID)
    <div class="form-group">
        @Html.LabelFor(model => model.KindName, new { @class = "control-label" })
        @Html.EditorFor(model => model.KindName, new { htmlAttributs = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.KindName)
    </div>
    <div class="form-group" hidden>
        @Html.LabelFor(model => model.CreateTime, new { @class = "control-label" })
        @Html.EditorFor(model => model.CreateTime, new { htmlAttributs = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.KindName)
    </div>
    <div class="form-group">
        <input type="submit" value="送出" class="btn btn-primary" />
        <input type="reset" value="取消" class="btn" />
    </div>
}

<script>
    $(document).ready(function () {        
        $("#CreateTime").val(@ViewBag.CreateTime);
    });
</script>